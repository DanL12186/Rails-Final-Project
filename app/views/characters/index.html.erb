<h3> <%= link_to "Create new character", new_user_show_character_path %> </h3>

<h1> Your characters </h1>

<% @characters.each do |character| %>
  <h2> Name: <%= character.name %> </h2>
  <h3> Status: <%= character.status %> </h3>
  <h3> Classification: <%= character.hero? %> </h3>
  <h3> Notes: <%= character.note %> </h3>
  <h3> <%= link_to "Edit #{character.name}", edit_user_show_character_path(current_user, character.show.id, character.id) %> </h3>
  <br>
<% end %>
