<h3>
<center>

<% unless logged_in? %>
  <%= link_to "Sign up", new_user_path %>
  <%= link_to "Log in", login_path, class: "link" %>
  <%= link_to "Sign in with Facebook", "/auth/facebook", class: "link" %>

<% else %>
  <%= link_to "Home", root_url, class: "link" %>
  <%= link_to "User Profile", user_path(current_user), class: "link" %>
  <%= link_to "Log Out", logout_path, method: :delete, class: "link" %>
  <%= link_to "Edit Profile", edit_user_path(current_user), class: "link" %> <br>
  <%= link_to "View Your Shows", user_shows_path(current_user), class: "link" unless current_user.shows.empty? %>
<% end %>

</center>
</h3>
