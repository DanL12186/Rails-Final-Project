<script type = "text/javascript" charset="UTF-8">
 $(function() {
   $("a").on("mouseover", function(event) {
       this.style.color = "red";
       this.style.fontSize = "110%";
    });
   $("a").on("mouseout", function(event) {
       this.style.color = "";
       this.style.fontSize = "100%";
    });
 });
</script>
